{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-sparse-arrays": "off",
        "no-unused-vars": "off"

    }
}
